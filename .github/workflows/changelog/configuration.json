{
    "categories": [
        {
            "title": "## 🚀 Features",
            "labels": [
                "feature",
                "feat"
            ]
        },
        {
            "title": "## 🐛 Fixes",
            "labels": [
                "fix"
            ]
        },
        {
            "title": "## 📚 Documentation",
            "labels": [
                "docs"
            ]
        },
        {
            "title": "## 🔨 Refactoring",
            "labels": [
                "refactor"
            ]
        },
        {
            "title": "## 🧪 Tests",
            "labels": [
                "test"
            ]
        },
        {
            "title": "## 📦 Dependencies",
            "labels": [
                "chore"
            ]
        },
        {
            "title": "## ⚙️ CI/CD",
            "labels": [
                "ci"
            ]
        },
        {
            "title": "## 🎨 Styling",
            "labels": [
                "style"
            ]
        },
        {
            "title": "## ⚡ Performance",
            "labels": [
                "perf"
            ]
        },
        {
            "title": "## 🔧 Build",
            "labels": [
                "build"
            ]
        },
        {
            "title": "## ↩️ Reverts",
            "labels": [
                "revert"
            ]
        },
        {
            "title": "## Other Changes",
            "exhaustive": true,
            "exhaustive_rules": false,
            "empty_content": "- No other changes"
        }
    ],
    "label_extractor": [
        {
            "method": "regexr",
            "pattern": "(.+?)!?:.+",
            "target": "$1",
            "on_property": "title"
        }
    ],
    "sort": {
        "order": "ASC",
        "on_property": "mergedAt"
    },
    "template": "#{{CHANGELOG}}\n\n<details>\n<summary>Uncategorized</summary>\n\n#{{UNCATEGORIZED}}\n</details>",
    "pr_template": "- #{{TITLE}} by @#{{AUTHOR}} in #{{URL}}",
    "empty_template": "- no changes",
    "transformers": [
        {
            "pattern": "[\\-\\*] (\\[(...|TEST|CI|SKIP)\\])( )?(.+?)\n(.+?[\\-\\*] )(.+)",
            "target": "- $4\n  - $6"
        }
    ],
    "trim_values": false,
    "max_tags_to_fetch": 200,
    "max_pull_requests": 200,
    "max_back_track_time_days": 365,
    "tag_resolver": {
        "method": "semver"
    }
}